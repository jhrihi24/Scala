package services

import javax.inject._

import models.Persona
import repository.PersonaRepository

import scala.concurrent.{ExecutionContext, Future}

trait PersonaQueryService{
  def obtenerTodos(): Future[Seq[Persona]]
}

@Singleton
class PersonaQueryServiceImpl @Inject()(personaRepository: PersonaRepository) extends PersonaService{
  
  def obtenerTodos() = personaRepository.obtenerTodos()
  
}