case class Persona(id: Int, nombreCompleto: String)
object Persona {
  
  implicit val personaJsonReads: Writes[Persona] = (
    (JsPath \ "id").write[Int] and
    (JsPath \ "nombreCompleto").write[String]
  )(Persona.apply _)
  
}